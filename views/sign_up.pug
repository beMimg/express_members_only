extends layout 

block content 
  nav(class="nav")
    div 
      h1 Members Only 
    div(class='links')
      a(href="/sign-up") Sign Up 
      a(href='/sign-in') Sign In
  form(method="post" class="form-col") 
    h1 Sign up 
    label(for="first_name") First Name: 
    input(type="text" required name="first_name" value=(undefined===user ? "" : user.first_name))
    label(for='last_name') Last Name: 
    input(type="text" required name="last_name" value=(undefined===user ? "" : user.last_name))
    label(for="username") Username: 
    input(type="text" required name="username" value=(undefined===user ? "" : user.username))
    label(for="password") Password: 
    input(type="password" required name="password") 
    label(for="passwordConfirmation") Password Confirmation:
    input(type="password" name='passwordConfirmation' required )
    button(type="submit") Create Account

    if errors 
      ul 
        for error in errors
          li!= error.msg